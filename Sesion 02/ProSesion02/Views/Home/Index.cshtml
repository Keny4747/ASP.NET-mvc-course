@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["titulo"]</h1>
<p>Total estudiantes: @ViewData["total"]</p>

<table class="table table-striped">
    <tr>
        <th>Nombres</th>
        <th>Apellido</th>
        <th>Edad</th>
    </tr>
    @for(var i = 0; i<(ViewData["estudiantes"] as List<Estudiante>).Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@(((List<Estudiante>)ViewData["estudiantes"])[i].nombre)</td>
            <td>@(((List<Estudiante>)ViewData["estudiantes"])[i].apellido)</td>
            <td>@(((List<Estudiante>)ViewData["estudiantes"])[i].edad)</td>
        </tr>
    }
</table>

@{
    var saludo = "Hola Mundo";
    var numero = 37;
    <p>@saludo, desde mi primera pagina web</p>
    <p>@numero</p>

}

@{
    var nombres = new List<string>();
    nombres.Add("Carlos");
    nombres.Add("Alexandra");
    nombres.Add("Maria");


    for(var i=0; i<nombres.Count; i++)
    {
        <p>@nombres[i]</p>
    }
    var mensaje = nombres.Count < 5 ? "menos" : "mas";
}

@if(nombres.Count < 5)
{
    <p>Existen menos de 5 registros</p>
}
else
{
    <p>Existen mas de 5 registros</p>
}

<p>@mensaje</p>

